<style>
.image-item {
  opacity: 0.75;
  display: inline-block;
  border-radius: 5px;
}
.image-item.active,
.image-item:hover {
  opacity: 1;
}
</style>
<% @images = Image.all %>
<div class="modal fade" id="images-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Galería de imágenes</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body row">
        <% if @images.empty? %>
        <div class="col-md-12 text-center mt-4">
          <p>Aún no se ha agregado ninguna imagen</p>
        </div>
        <% else %>
        <% @images.each do |image| %>
        <div class="col-6 col-sm-4 col-md-3">
          <%= link_to "#", class: "m-2 w-full image-item", style: "background-color: #{image.bg};", data: { preview: image.file.thumb.url, id: image.id, title: "#{image.alt}" }, title: image.title do %>
            <%= image_tag image.file.thumb.url, alt: image.alt, width: 240 %>
          <% end %>
        </div>
        <% end %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="select-img-btn"><i class="fa-solid fa-check"></i> Seleccionar</button>
      </div>
    </div>
  </div>
</div>