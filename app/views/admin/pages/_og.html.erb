<figure class="p-4 border border-dark-800 bg-primary-900/10 rounded-md shadow-md shadow-dark-800/5 flex flex-col justify-center" id="og-card">
    <%= object.label :og_image do %>
    <%= image_tag object.object.og_image.url, id: "og-img-preview" %>
    <%= object.file_field :og_image, class: "sr-only input-img", data: { target: "#og-img-preview" } %>
    <% end %>
    <h2 class="font-medium mt-1"><span id="page-og-title"><%= object.object.og_title %></span> | <%= "#{Rails.application.credentials.app_name}" %></h2>
    <p id="page-og-description" class="tex-base text-dark-300"><%= object.object.og_description %></p>
    <p id="page-og-link" class="text-dark-500"><%= ENV.fetch('domain') { 'https://juanfuent.es/' } %><span id="page-og-slug"><%= object.object.slug %></span></p>
</figure>

<div class="pt-0">
    <div class="w-full pb-1">
        <%= object.label :og_title, class: "py-4" do %>
        Título
        <small class='legend-validation float-right text-dark-500'><i><span id="og-title-counter"><%= object.object.og_title.to_s.length %></span> / 70 caracteres</i></small>
        <% end %>
        <%= object.text_field :og_title, class: " str-counter input-og-value", placeholder: "Título del artículo sin mencionar marcas", autofocus: true, required: true, data: { target: "#og-title-counter", attr: "title" }, maxLength: 70 %>
    </div>
    <div class="w-full pb-1">
        <%= object.label :slug do %>
        URL Semántica
        <a href="https://es.wikipedia.org/wiki/URL_sem%C3%A1ntica"
            aria-label="Las URL semánticas o URL amigables son aquellas URL que son, dentro de lo que cabe, entendibles para el usuario..."
            data-balloon-pos="up" data-balloon-length="xlarge" target="_blank">
            <i class="fa-solid fa-circle-info"></i>
        </a>
        <div class="mt-2 flex rounded-md shadow-sm">
            <span class="inline-flex items-center rounded-l-md border border-r-0 border-dark-800 h-8 pl-3 text-dark-500 pr-0"><%= ENV.fetch('domain') { 'https://juanfuent.es/' } %></span>
            <%= object.text_field :slug, class: "!p-0 !pl-0 !text-sm !m-0 !rounded-l-none !border-l-0 input-og-value", placeholder: "mi-url-amigable", required: true, data: { attr: "slug" }, readonly: @page.restricted %>
        </div>
        <% end %>
    </div>

    <div class="w-full pb-1">
        <%= object.label :og_description do %>
        Descripción
        <small class='legend-validation float-right text-dark-500'><i><span id="description-counter"><%= object.object.og_description.to_s.length %></span> / 200 caracteres</i></small>
        <% end %>
        <%= object.text_area :og_description, class: " str-counter input-og-value", placeholder: "De 2 a 3 oraciones que describan el contenido sin usar el título.", required: true, data: { target: "#description-counter", attr: "description" }, maxLength: 200 %>
    </div>

    <div class="w-full">
        <%= object.label :keywords %>
        <%= object.text_field :keywords, class: "", placeholder: "keyword, separados, por, coma..." %>
    </div>
</div>