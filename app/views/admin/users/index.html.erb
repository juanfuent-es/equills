<% provide(:title, "Lista de #{t(:users)}") %>

<header class="sm:flex sm:items-center">
  <div class="sm:flex-auto">
    <h1 class="leading-6 text-lg mt-4 font-medium">Lista de <%= t(:users) %> <sup><%= User.all.count %></sup></sup>
    </h1>
    <p class="mt-2 text-gray-500">En la siguiente tabla se listan todos los tipos de usuario, administradores, visitantes, etc.</p>
  </div>
  <nav class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
    <%= link_to new_admin_user_path, class: 'btn success' do %>
    <i class="fas fa-plus"></i> <%= "#{t(:new)} #{t(:user)}" %>
    <% end %>
  </nav>
</header>

<section class="my-8 flow-root">
  <table>
    <thead>
      <tr>
        <th>Usuario</th>
        <th>Rol</th>
        <th><span class="sr-only">Eliminar</span></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td class="font-medium text-gray-300">
          <%= link_to user.email, edit_admin_user_url(user), class: "" %>
        </td>
        <td><%= user.role %></td>
        <td class="text-center">
          <%= link_to admin_user_path(user), method: :delete, class: "btn danger" , data: { confirm: "¿Estás seguro de eliminar este #{t(:user)} (#{user.email})?" } do %>
          <i class='fas fa-trash'></i> Eliminar
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>
